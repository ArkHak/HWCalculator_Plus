<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyDarkTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorActionButton">@color/clr_btn_action_dark</item>
        <item name="colorCalculateButton">@color/clr_btn_calculate_dark</item>
        <item name="colorNumButton">@color/clr_btn_nums_dark</item>
        <item name="colorTextCustom">@color/white</item>
        <item name="colorCleanButton">@color/clr_btn_clear_dark</item>
        <item name="colorThemeButton">@color/clr_btn_theme_dark</item>
        <item name="colorTextButton">@color/white</item>
        <item name="backgroundApp">@color/black</item>
    </style>

    <style name="MyLightTheme" parent="AppTheme">
        <item name="colorActionButton">@color/clr_btn_action</item>
        <item name="colorCalculateButton">@color/clr_btn_calculate</item>
        <item name="colorNumButton">@color/clr_btn_nums</item>
        <item name="colorTextCustom">@color/black</item>
        <item name="colorCleanButton">@color/clr_btn_clear</item>
        <item name="colorThemeButton">@color/clr_btn_theme</item>
        <item name="colorTextButton">@color/white</item>
        <item name="backgroundApp">@drawable/background_light</item>
    </style>


</resources>